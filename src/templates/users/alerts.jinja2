{% extends "base.jinja2" %}
{% block content %}
    <div class="jumbotron jumbotron-fluid">
        <div>
            <h1>Alerts <small>Showing existing alerts</small></h1>
        </div>
    </div>

    <div class="list-group">
        {% for alert in alerts %}
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-header">Alert for {{ alert.item.name }}</h4>
                <p class="list-group-item-text">Latest price: {{ alert.item.price }}<br/>
                Last checked time: {{ alert.last_checked.strftime("%d-%m-%y") }}</p>
            </a>
        {% endfor %}
    </div>


{% endblock %}