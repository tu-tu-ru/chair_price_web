<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Pricing service</title>

    {%include 'html_dependencies.jinja2' %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Pricing</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="{{ url_for('stores.index')}}">Stores</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ url_for('alerts.index')}}">Alerts</a>
            </li>
        </ul>

        {% if session["email"] %}
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ url_for('users.user_alerts')}}"><i class="fas fa-bell"></i> Your Alerts</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ url_for('users.logout_user')}}"><i class="fas fa-sign-out-alt"></i> Log Out</a>
                </li>
            </ul>

        {% else %}
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ url_for('users.register_user')}}"><i class="fas fa-user-plus"></i> Register</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ url_for('users.login_user')}}"><i class="fas fa-sign-in-alt"></i> Log In</a>
                </li>
            </ul>
        {% endif %}
    </div>
</nav>


{% block content%} {% endblock %}


</body>
</html>